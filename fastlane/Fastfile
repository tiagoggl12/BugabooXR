# Fastlane configuration for BugabooXR iOS deployment

default_platform(:ios)

platform :ios do

  # Setup App Store Connect API Key from environment variables
  before_all do
    if ENV["APP_STORE_CONNECT_API_KEY_ID"] && ENV["APP_STORE_CONNECT_API_ISSUER_ID"] && ENV["APP_STORE_CONNECT_API_KEY"]
      app_store_connect_api_key(
        key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
        issuer_id: ENV["APP_STORE_CONNECT_API_ISSUER_ID"],
        key_content: ENV["APP_STORE_CONNECT_API_KEY"],
        is_key_content_base64: false,
        in_house: false
      )
    end
  end

  # Lane para configurar certificados usando Match
  desc "Setup signing certificates with Match"
  lane :setup_certs do
    match(
      type: "appstore",
      readonly: true,
      verbose: true
    )
  end

  # Lane para fazer upload para TestFlight
  desc "Build and upload to TestFlight"
  lane :beta do
    # Setup certificates first
    setup_certs
    # Incrementar build number automaticamente
    increment_build_number(
      build_number: latest_testflight_build_number + 1,
      xcodeproj: "build/iOS/Unity-iPhone.xcodeproj"
    )

    # Build the app
    build_app(
      project: "build/iOS/Unity-iPhone.xcodeproj",
      scheme: "Unity-iPhone",
      export_method: "app-store",
      output_directory: "./build/iOS/output",
      output_name: "BugabooXR.ipa"
    )

    # Upload to TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      skip_submission: true,
      distribute_external: false,
      notify_external_testers: false
    )

    # Notificação de sucesso
    puts "✅ Build uploaded to TestFlight successfully!"
  end

  # Lane para release na App Store
  desc "Deploy to App Store"
  lane :release do
    # Setup certificates first
    setup_certs

    # Build the app
    build_app(
      project: "build/iOS/Unity-iPhone.xcodeproj",
      scheme: "Unity-iPhone",
      export_method: "app-store"
    )

    # Upload to App Store
    upload_to_app_store(
      skip_metadata: false,
      skip_screenshots: false,
      submit_for_review: false
    )
  end

  # Lane apenas para build (sem upload)
  desc "Build iOS IPA"
  lane :build do
    build_app(
      project: "build/iOS/Unity-iPhone.xcodeproj",
      scheme: "Unity-iPhone",
      export_method: "app-store",
      output_directory: "./build/iOS/output",
      output_name: "BugabooXR.ipa"
    )
  end

end
